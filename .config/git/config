[alias]
  zip = !sh -c 'git-archive --format=zip --prefix=$(basename `pwd -P`)/ $0 > $(basename `pwd -P`)-$0.zip'
  tgz = !sh -c 'git-archive --format=tgz --prefix=$(basename `pwd -P`)/ $0 > $(basename `pwd -P`)-$0.tar.gz'
  cc = "!sh -c '[[ $0 =~ ^(.*)\\ #([0-9]*)$ ]]; text=${BASH_REMATCH[1]// /-}; git checkout -b trond/issue-${BASH_REMATCH[2]}/${text,,}'"
[diff]
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true
[web]
  browser = wrapfox
[push]
  default = simple
  autoSetupRemote = true
  followTags = true
[diff "nodiff"]
  command = /bin/true
[core]
  #pager = delta --plus-color="#012800" --minus-color="#340001"
  editor = nvim
[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
[mergetool "nvim"]
